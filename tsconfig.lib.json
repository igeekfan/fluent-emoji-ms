{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.vue"
  ],
  "exclude": [
    "src/examples/**/*",
    "src/App.vue",
    "src/main.ts",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
